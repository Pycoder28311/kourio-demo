generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Account {
  id                 Int       @id @default(autoincrement())
  userId             Int
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?   @db.Text
  access_token       String?   @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?   @db.Text
  session_state      String?
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  password     String?
  name         String?
  image        String?
  emailVerified DateTime?
  business     Boolean   @default(false)
  stripeCustomerId String?

  businesses    Barbershop[]
  passwordResets PasswordReset[]
  sessions      Session[]
  accounts      Account[]
  receivedMessages Message[] @relation("ReceivedMessages")
}

model PaymentIntent {
  id            String   @id @default(cuid())
  stripeId      String   @unique      // Το ID που επιστρέφει το Stripe
  userId        String?                 // Προαιρετικά αν συνδέεται με χρήστη
  orderId       String?                 // Προαιρετικά αν συνδέεται με παραγγελία
  amount        Int                     // Ποσό σε cents
  currency      String                  // Πχ "eur"
  status        String                  // "requires_payment_method", "succeeded", "canceled", κλπ
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id          Int      @id @default(autoincrement())
  senderId    Int?
  receiverId  Int?
  subject     String
  content     String
  senderName  String
  senderEmail String
  senderPhone String?
  createdAt   DateTime @default(now())
  read        Boolean  @default(false)

  receiver User? @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
}

model Barbershop {
  id                Int                  @id @default(autoincrement())
  name              String
  userId            Int
  address           String
  distance          Float?
  description       String?
  serviceCategories ServiceCategory[]    @relation("BarbershopServiceCategories")
  weeklySchedules   BarbershopWeeklySchedule[]
  dateOverrides     BarbershopDateOverride[]
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  owner             User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ServiceCategory {
  id          Int          @id @default(autoincrement())
  name        String
  services    Service[]
  barbershops Barbershop[] @relation("BarbershopServiceCategories")
  position    Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Service {
  id               Int             @id @default(autoincrement())
  name             String
  price            Float
  durationMinutes  Int
  categoryId       Int
  category         ServiceCategory @relation(fields: [categoryId], references: [id])
  appointments     Appointment[]
  position         Int          @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model Barber {
  id            Int            @id @default(autoincrement())
  name          String
  experience    Int?
  bio           String?
  appointments  Appointment[]
  position      Int          @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Appointment {
  id          Int       @id @default(autoincrement())
  date        DateTime
  serviceId   Int
  barberId    Int
  service     Service   @relation(fields: [serviceId], references: [id])
  barber      Barber    @relation(fields: [barberId], references: [id])
  status      String    @default("pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model WeeklySchedule {
  id          Int                       @id @default(autoincrement())
  dayOfWeek   String
  openHour    String?
  closeHour   String?
  alwaysClosed Boolean                  @default(false)
  barbershops BarbershopWeeklySchedule[]
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
}

model DateScheduleOverride {
  id              Int                       @id @default(autoincrement())
  date            DateTime                  @unique
  openHour        String?
  closeHour       String?
  alwaysClosed    Boolean                   @default(true)
  recurringYearly Boolean                   @default(false)
  barbershops     BarbershopDateOverride[]
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt
}

model BarbershopWeeklySchedule {
  barbershopId Int
  scheduleId   Int
  barbershop   Barbershop     @relation(fields: [barbershopId], references: [id])
  schedule     WeeklySchedule @relation(fields: [scheduleId], references: [id])

  @@id([barbershopId, scheduleId])
}

model BarbershopDateOverride {
  barbershopId   Int
  dateOverrideId Int
  barbershop     Barbershop           @relation(fields: [barbershopId], references: [id])
  dateOverride   DateScheduleOverride @relation(fields: [dateOverrideId], references: [id])

  @@id([barbershopId, dateOverrideId])
}
