generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Barbershop {
  id                Int                  @id @default(autoincrement())
  name              String
  address           String
  distance          Float?
  description       String?
  serviceCategories ServiceCategory[]    @relation("BarbershopServiceCategories")
  weeklySchedules   BarbershopWeeklySchedule[]
  dateOverrides     BarbershopDateOverride[]
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
}

model ServiceCategory {
  id          Int          @id @default(autoincrement())
  name        String
  services    Service[]
  barbershops Barbershop[] @relation("BarbershopServiceCategories")
  position    Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Service {
  id               Int             @id @default(autoincrement())
  name             String
  price            Float
  durationMinutes  Int
  categoryId       Int
  category         ServiceCategory @relation(fields: [categoryId], references: [id])
  appointments     Appointment[]
  position         Int          @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model Barber {
  id            Int            @id @default(autoincrement())
  name          String
  experience    Int?
  bio           String?
  appointments  Appointment[]
  position      Int          @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Appointment {
  id          Int       @id @default(autoincrement())
  date        DateTime
  serviceId   Int
  barberId    Int
  service     Service   @relation(fields: [serviceId], references: [id])
  barber      Barber    @relation(fields: [barberId], references: [id])
  status      String    @default("pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model WeeklySchedule {
  id          Int                       @id @default(autoincrement())
  dayOfWeek   String
  openHour    String?
  closeHour   String?
  alwaysClosed Boolean                  @default(false)
  barbershops BarbershopWeeklySchedule[]
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
}

model DateScheduleOverride {
  id              Int                       @id @default(autoincrement())
  date            DateTime                  @unique
  openHour        String?
  closeHour       String?
  alwaysClosed    Boolean                   @default(true)
  recurringYearly Boolean                   @default(false)
  barbershops     BarbershopDateOverride[]
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt
}

model BarbershopWeeklySchedule {
  barbershopId Int
  scheduleId   Int
  barbershop   Barbershop     @relation(fields: [barbershopId], references: [id])
  schedule     WeeklySchedule @relation(fields: [scheduleId], references: [id])

  @@id([barbershopId, scheduleId])
}

model BarbershopDateOverride {
  barbershopId   Int
  dateOverrideId Int
  barbershop     Barbershop           @relation(fields: [barbershopId], references: [id])
  dateOverride   DateScheduleOverride @relation(fields: [dateOverrideId], references: [id])

  @@id([barbershopId, dateOverrideId])
}
